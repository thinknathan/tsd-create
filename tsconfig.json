{
  "compilerOptions": {
      "target": "es2019",
      "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "newLine": "LF",
      "stripInternal": true,
      "strict": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "jsx": "react",
      "rootDir": "src",
      "outDir": "lib",
  },
  "exclude": ["./node_modules/*", "./lib/*", "./bin/*"]
}